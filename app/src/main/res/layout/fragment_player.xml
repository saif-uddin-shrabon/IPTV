<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Player_Fragment"
    android:background="@drawable/back_colour"
    android:orientation="vertical"
    >

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Player"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"/>
    <RelativeLayout
        android:layout_weight="1"
        android:background="@drawable/back_colour_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp"
            android:id="@+id/flotingBtn"
            android:backgroundTint="#9C27B0"
            android:src="@drawable/add_icon"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

        </androidx.recyclerview.widget.RecyclerView>




        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Paste or type the URL of the file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
        <EditText
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/url"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/search_custom_style"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Referrer(Optional)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
        <EditText
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/channelrf"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/search_custom_style"
            />

        <android.widget.Button
            android:id="@+id/playerbtn"
            android:background="@drawable/play_button_style"
            android:text="Play"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="35dp"/>


        <android.widget.Button
            android:id="@+id/delete_all"
            android:background="@drawable/play_button_style"
            android:text="Delete Data"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="35dp"/>





    </RelativeLayout>

</LinearLayout>